---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="404" description="Page not found">
  <Header />

  <main class="app-layout flex flex-1 items-center py-20">
    <section class="rounded-xl border border-border bg-muted/25 p-8">
      <p class="text-xs uppercase tracking-[0.2em] text-foreground/55">404</p>
      <h1 class="mt-3 text-3xl font-bold">Page not found</h1>
      <p class="mt-4 max-w-prose text-sm text-foreground/75">
        The page you requested does not exist or may have moved.
      </p>
      <p class="mt-6">
        <a href="/" class="text-sm underline decoration-dashed underline-offset-4 hover:text-accent">
          Return home
        </a>
      </p>
    </section>
  </main>

  <Footer />
</Layout>
